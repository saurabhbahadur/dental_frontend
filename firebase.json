{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/optimized/**",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=31536000, public" }
        ]
      },
      {
        "source": "/**",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=600, public" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
